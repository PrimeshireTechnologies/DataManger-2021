        <div ng-controller="viewController" class="container">

            <div id="image">

                <div class="col-md-12">
                    <div class="box">
                        <div class="content-wrap" style="margin-left:30px;margin-top:40px;">                      
                            <h2 style="font-size:23px;text-shadow: 1px 1px 1px #000000; color:lightgray;">Log In</h2>

                            <form action="" method="post" id="login">
                                <div>
                                    <input class="form-control" type="email" placeholder="E-mail address" id="email" style="height:30px;" autocomplete="off">
                                    <div style="height:4px;"></div>
                                    <input class="form-control" type="password" placeholder="Password" id="pwd" name="pwd" style="height:30px;">
                                    <div class="action" ng-click="login()" style="margin-top:55px;margin-left:110px;">
                                        <a class="btn btn-primary signup" style="width:120px; background-color:#436280; color:white;">Login</a>
                                    </div>
                                </div>
                                <div style="margin-top:-80px;">
                                    <input type="checkbox" id="show-hide" name="show-hide" value="" />
                                    <label for="show-hide" style="color:#f37946; font-weight:700;">Show password</label>
                                </div>

                            </form>
                        </div>

                        <div class="already">
                            <p style="font-size:16px;">Don't have an account yet? <a href="/Home/Signup" style="font-size:15px;font-weight:700;">Sign Up</a>  
                               <span> <a href="/Home/ForgotPassword" style="font-weight:600;margin-left:25px;font-size:15px; color:#5f6caf;" id="forgotpass">Forgot password?</a></span>
                           </p>
                        </div>

                        <div style="position:fixed;top:50%;left:50%;width:38em;height:18em;margin-top:28em;margin-left:-14em; color:#f37946;font-weight:900; font-size:12px;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">
