<!--Start Preloader -->
<div class="preloader"></div>
<section ng-app="app" class="col-md-12">    
    <div class="container">
        <div class="col-md-12">
            <div class="col-md-4 col-md-offset-4">
                <div class="signupbox">
                    <div class="content-wrap" style="margin-left:55px;margin-top:40px;">
                        <h2 class="signlabeltitle">Sign Up</h2>
                        <form action="" method="post" id="login">
                            <div class="formclass">
                                <input class="form-control" type="text" placeholder="FirstName" id="fname" tabindex="1" autocomplete="off">
                                <input class="form-control" type="text" placeholder="LastName" id="lname" tabindex="2" autocomplete="off">
                                <span style="color:#f37946;font-size:17px;font-weight:700;">Please select Role Type</span>
                                <select class="form-control" id="role" onchange="focusemail()" tabindex="3">
                                    <option value=""></option>
                                    <option value="Case Manager">Case Manager</option>
                                    <option value="Support Staff">Support Staff</option>
                                </select>
                                <input class="form-control" type="email" placeholder="E-mail address" id="email" tabindex="4" autocomplete="off" multiple>
                                <input class="form-control" type="password" placeholder="Password" id="pwd" name="pwd" tabindex="5" autocomplete="off">
                                <input class="form-control" type="password" placeholder="Confirm Password" id="confirmpass" tabindex="6" autocomplete="off">
                                <p id="demo"></p>
                                <div style="margin-top:-63px;margin-left:282px;">
                                    <input type="checkbox" id="show-hide" name="show-hide" value="" />
                                    <label for="show-hide" style="font-size:12px;color:#f37946;font-weight:700;">Show</label>
                                </div>

                                <div style="margin-top:10px;margin-left:282px;">
                                    <input type="checkbox" id="show-hide2" name="show-hide2" value="" />
                                    <label for="show-hide2" style="font-size:12px;color:#f37946;font-weight:700;">Show</label>
                                </div>
                                
                                <div class="actionsign" ng-click="signup()">
                                    <a class="btn btn-primary signup" style="width:120px; background-color:#436280; color:white;">Sign Up</a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="alreadysign">
                        <span style="font-size:16px;">Have an account already?</span>
                        <a href="/Home/MobileLogin" style="font-size:15px;font-weight:700; text-shadow: 1px 0px 0px #000000;" id="already">Login</a>
                    </div>
                    <div class="mobilesignfooter">
                         <p>&copy; @DateTime.Now.Year <a href="https://www.primeshire.tech/" onmouseover="mouseover()" onmouseout="mouseout()" rel="noopener noreferrer" target="_blank" style="text-shadow: 2px 1px 0px #000000; color:cornflowerblue;font-weight:bolder; font-size:15px;">Primeshire Technologies. </a> <span style="margin-left:1px;"><span style="margin-left:1px;">All Rights Reserved</span></span> <span style="margin-left:5px;color:darkslategrey;font-weight:900;font-family:Tahoma;">V 1.0.6</span></p>
                    </div>
                </div>
                <div>

                </div>
                <script>
                    function focusemail() {
                        document.getElementById("email").focus();
                    }

                    let idleTime = 0;
                    $(document).ready(function () {
                        //Increment the idle time counter every minute.
                        idleInterval = setInterval(timerIncrement, 60000); // 1 minute

                        //Zero the idle timer on mouse movement.
                        $('body').mousemove(function (e) {
                            idleTime = 0;
                        });

                        $('body').keypress(function (e) {
                            idleTime = 0;
                        });

                        $('body').click(function () {
                            idleTime = 0;
                        });

                        function timerIncrement() {
                            idleTime = idleTime + 1;
                            if (idleTime > 6) {
                                window.location.href = "/Home/MobileLogin";
                            }
                        }
                    });

                </script>
            </div>
        </div>
    </div>
    <br />
    <script src="../../Scripts/login.js"></script>
